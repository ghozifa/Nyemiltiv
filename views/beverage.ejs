<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/beverages.css" rel="stylesheet" type="text/css">
    <link href="/css/navbar.css" rel="stylesheet" type="text/css">
    <title>Nyemiltiv - Beverages</title>
</head>
<%- include("../partials/navbar") %>
    <body>
        <div style="text-align:center">
            <h2><a href="/profiles/1">Profile</a></h2>
            <h1>Beverages</h1>
            <% if(role == "Admin") { %>
            <p><a href="/beverage/add"><button>Add Beverage</button></a></p>
            <% } %>
        </div>
        <% result.Products.forEach(x=> { %>
            <div class="card">
                <img src="<%= x.imgUrl %>" alt="food-beverage" style="width:300px" height="300px">
                <div class="container">
                  <h4><b><%= x.name %></b></h4>
                  <p>Stock : <%= x.stock %> </p>
                  <p>Price: <%= idrFormatter(x.price) %></p>
                  <a href="/products/<%= x.id %>/buy"><button style="background-color:lightgreen">Buy</button></a>
                  <% if(role == "Admin") { %>
                    <a href="/products/<%= x.id %>/deleteBeverage"><button style="background-color:red">Delete</button></a>
                    <% } %>
                </div>
              </div>
              <% }); %>
    </body>

</html>